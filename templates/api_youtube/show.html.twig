{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ video.filename }}</td>
            </tr>
            <tr>
                <th>ThumbnailFilename</th>
                <td>{{ video.thumbnailFilename }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_api_youtube_index') }}">back to list</a>

    <a href="{{ path('app_api_youtube_edit', {'id': video.id}) }}">edit</a>

    {{ include('api_youtube/_delete_form.html.twig') }}
{% endblock %}
