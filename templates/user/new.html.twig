{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {% if is_granted('ROLE_ADMIN') %}
                    <h1 class="display-4 mb-4">Create New User</h1>

                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {% for field in form %}
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    {% endfor %}
                    <button type="submit" class="btn btn-primary">
                        Save <i class="fa-solid fa-floppy-disk"></i>
                    </button>
                    <a class="btn btn-secondary ms-2" href="{{ path('app_user_index') }}">
                        <i class="fa-solid fa-arrow-left"></i> Back to list
                    </a>
                    {{ form_end(form) }}

                {% else %}
                    <div class="alert alert-danger" role="alert">
                        <h1 class="display-4">Accès refusé</h1>
                        <p>Seul les administrateurs peuvent accéder à cette page.</p>
                        <a class="btn btn-secondary" href="{{ path('app_video_index') }}">
                            <i class="fa-solid fa-arrow-left"></i> Back to home
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
