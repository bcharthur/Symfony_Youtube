{% extends 'base.html.twig' %}

{% block title %}Abonnements de {{ user.username }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Abonnements de {{ user.username }}</h2>

        <div class="list-group">
            {% for abonnement in abonnements %}
                <a href="{{ path('app_user_profile', { 'id': abonnement.cible.id }) }}" class="list-group-item list-group-item-action d-flex align-items-center">
                    <img src="{{ abonnement.cible.profilePicture ? asset('uploads/profile_pictures/' ~ abonnement.cible.profilePicture) : 'https://via.placeholder.com/50' }}" alt="{{ abonnement.cible.username }}" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                    <div>
                        <h5>{{ abonnement.cible.username }}</h5>
                        <small class="text-muted">Abonn√©(e) depuis le {{ abonnement.createdAt|date('d/m/Y') }}</small>
                    </div>
                </a>
            {% else %}
                <p class="text-muted">Pas d'abonnement pour le moment.</p>
            {% endfor %}
        </div>

        <a href="{{ path('app_user_profile', { 'id': user.id }) }}" class="btn btn-secondary mt-3">Retour au profil</a>
    </div>
{% endblock %}
