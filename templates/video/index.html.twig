{% extends 'base.html.twig' %}

{% block title %}YouTube SF{% endblock %}

{% block body %}

            <h1>Video index</h1>
            <div class="mb-3">
                <a href="{{ path('app_video_new') }}" class="btn btn-success">Ajouter une nouvelle vidéo</a>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5 g-4">
                {% for video in videos %}
                    <div class="col">
                        <div class="card">
                            <a href="{{ path('app_video_show', {'id': video.id}) }}">
                                {% if video.thumbnailFilename %}
                                    <img src="{{ asset('media/thumbnails/' ~ video.thumbnailFilename) }}" class="card-img-top" alt="{{ video.title }}">
                                {% else %}
                                    <img src="https://via.placeholder.com/320x180" class="card-img-top" alt="{{ video.title }}">
                                {% endif %}
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">{{ video.title }}</h5>
                                <p class="card-text">
                                    <small class="text-muted">Ajouté le {{ video.createdAt|date('d/m/Y H:i') }}</small><br>
                                    <small class="text-muted">Mise en ligne par : {{ video.user.email }}</small>
                                </p>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <div>
                                        <a class="btn btn-info" href="{{ path('app_video_show', {'id': video.id}) }}"><i class="fa-solid fa-eye"></i></a>
                                        <a class="btn btn-warning" href="{{ path('app_video_edit', {'id': video.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <form method="post" action="{{ path('app_video_delete', {'id': video.id}) }}" onsubmit="return confirm('Are you sure you want to delete this video?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
                                            <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucune vidéo disponible pour le moment.</p>
                {% endfor %}
            </div>

{% endblock %}
