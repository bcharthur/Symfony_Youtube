<form method="post" action="{{ path('app_video_delete', {'id': video.id}) }}" onsubmit="return confirm('Are you sure you want to delete this video?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
    <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
</form>


