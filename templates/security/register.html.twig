{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

                {{ form_start(registrationForm, {'attr': {'class': 'border p-4 rounded shadow-sm'}}) }}

                <div class="form-group mb-3">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    <small class="form-text text-muted">
                        Votre mot de passe doit contenir au moins 6 caractères, incluant au moins une majuscule, une minuscule, un chiffre, et un caractère spécial.
                    </small>
                </div>
                <div class="form-group mb-3">
                    {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="agreeTerms">
                        {{ registrationForm.agreeTerms.vars.label|trans({}, 'messages') }}
                    </label>
                </div>
                <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
                {{ form_end(registrationForm) }}

                <p class="mt-3 text-center">Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a>.</p>
            </div>
        </div>
    </div>
{% endblock %}
